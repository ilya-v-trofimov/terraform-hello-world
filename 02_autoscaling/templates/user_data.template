#!/bin/bash
sudo yum update
sudo yum install -y httpd
sudo service httpd start
sudo chkconfig httpd on
sudo touch /var/www/html/index.html
sudo echo '
<html>
<head></head>
<body>
<h2>Hello ${user_id}!</h2>
<h3>This is my AWS EC2 load balanced website!</h3>
This page is served from instance <b>'`curl http://169.254.169.254/latest/meta-data/public-hostname)`'</b>
</body>
</html>' > /var/www/html/index.html
